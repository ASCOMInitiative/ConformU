<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <OutputType>exe</OutputType>
    <RuntimeIdentifiers>win10-x64</RuntimeIdentifiers>
    <UserSecretsId>c49fec0a-dd2c-4e60-9e85-407d8d9bdd9f</UserSecretsId>
    <Platforms>AnyCPU</Platforms>
    <ApplicationIcon />
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <FileVersion>0.1.0.0</FileVersion>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>conformu.snk</AssemblyOriginatorKeyFile>
    <Version>0.1.0.0</Version>
    <Configurations>Debug;Release;Windows</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Windows|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>

  <Choose>
    <When Condition=" '$(Configuration)'=='Windows' ">
      <PropertyGroup>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWindowsForms>true</UseWindowsForms>
      </PropertyGroup>
    </When>
    <When Condition=" '$(Configuration)'!='Windows' ">
      <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
      </PropertyGroup>
    </When>
  </Choose>

  <ItemGroup>
    <_WebToolingArtifacts Remove="Properties\PublishProfiles\Linux-Arm.pubxml" />
    <_WebToolingArtifacts Remove="Properties\PublishProfiles\Windows.pubxml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ASCOM.Standard.AlpacaClients" Version="0.0.14" />
    <PackageReference Include="ASCOM.Standard.COM.DriverAccess" Version="1.0.0-alpha17" />
    <PackageReference Include="ASCOM.Standard.Utilities" Version="1.0.0-alpha16" />
    <PackageReference Include="BlazorPro.BlazorSize" Version="5.0.0" />
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="Radzen.Blazor" Version="3.8.1" />
  </ItemGroup>

</Project>
