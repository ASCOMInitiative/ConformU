<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup Condition="'$(TargetFramework)'=='net5.0-windows'">
    <UseWindowsForms>true</UseWindowsForms>
    <DisableWinExeOutputInference>true</DisableWinExeOutputInference>
  </PropertyGroup>

  <PropertyGroup>
    <TargetFrameworks>net5.0-windows;net5.0</TargetFrameworks>
    <Configurations>Debug;Release</Configurations>
    <OutputType>Exe</OutputType>

    <UserSecretsId>c49fec0a-dd2c-4e60-9e85-407d8d9bdd9f</UserSecretsId>
    <Platforms>AnyCPU</Platforms>
    <ApplicationIcon>wwwroot\favicon.ico</ApplicationIcon>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>conformu.snk</AssemblyOriginatorKeyFile>
    <Version>1.0.0.0</Version>
    <AssemblyName>conformu</AssemblyName>
  </PropertyGroup>

  <!--
  Keep for reference
  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='Release|net5.0|AnyCPU'">
    <NoWarn>1701;1702;MSB3042</NoWarn>
  </PropertyGroup>
      <RuntimeIdentifier>win10-x64</RuntimeIdentifier>
 -->

  <!-- Always ignore MSB3042 warning - Flags that Namespace/Class is inside a compiler conditional expression -->
  <PropertyGroup>
    <NoWarn>1701;1702;MSB3042</NoWarn>
    <EnforceCodeStyleInBuild>True</EnforceCodeStyleInBuild>
    <AnalysisLevel>latest</AnalysisLevel>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="publish\**" />
    <Content Remove="publish\**" />
    <EmbeddedResource Remove="publish\**" />
    <None Remove="publish\**" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="Conform\Devices\Facades\DriverHostForm.resx" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Conform\Devices\Facades\DriverHostForm.resx" />
    <None Include="Properties\PublishProfiles\Linux-Arm.pubxml.user" />
    <None Include="Properties\PublishProfiles\Linux-X64-FTP.pubxml.user" />
    <None Include="Properties\PublishProfiles\Linux-X64.pubxml.user" />
    <None Include="Properties\PublishProfiles\Windows.pubxml.user" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ASCOM.Standard.AlpacaClients" Version="1.0.0-alpha21c" />
    <PackageReference Include="ASCOM.Standard.COM.DriverAccess" Version="1.0.0-alpha21c" />
    <PackageReference Include="ASCOM.Standard.Utilities" Version="1.0.0-alpha21c" />
    <PackageReference Include="Blazorise.Bootstrap" Version="0.9.4.4" />
    <PackageReference Include="Blazorise.Icons.FontAwesome" Version="0.9.4.4" />
    <PackageReference Include="Blazorise.TreeView" Version="0.9.4.4" />
    <PackageReference Include="BlazorPro.BlazorSize" Version="5.0.0" />
    <PackageReference Include="CommandLineParser" Version="2.8.0" />
    <PackageReference Include="Radzen.Blazor" Version="3.10.1" />
  </ItemGroup>

  <Target Name="CustomAfterPublishh" AfterTargets="AfterPublish">
    <!-- Insert tasks to run after publish here -->
    <Message Text="After Publish Task $(CheckoutDirectory)" />

  </Target>

</Project>
