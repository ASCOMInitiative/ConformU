    private void OnConformTestScopeChange(IEnumerable<int> scope)
    {
        List<int> newScope = new();
        bool propertiesEnabled = scope.Contains(0);
        bool methodsEnabled = scope.Contains(1);
        bool sideofPierReadEnabled = scope.Contains(2);
        bool sideofPierWriteEnabled = scope.Contains(3);
        bool performanceEnabled = scope.Contains(4);

        if (sideofPierWriteEnabled)
        {
            newScope = new List<int>() { 0, 1, 2, 3 };
            settings.TestProperties = true;
            settings.TestMethods = true;
            settings.TestSideOfPierRead = true;
            settings.TestSideOfPierWrite = true;

        }
        else
        {
            if (sideofPierReadEnabled)
            {
                newScope = new List<int>() { 0, 1, 2 };
                settings.TestProperties = true;
                settings.TestMethods = true;
                settings.TestSideOfPierRead = true;
                settings.TestSideOfPierWrite = false;
            }
            else
            {
                if (methodsEnabled)
                {
                    newScope = new List<int>() { 0, 1 };
                    settings.TestProperties = true;
                    settings.TestMethods = true;
                    settings.TestSideOfPierRead = false;
                    settings.TestSideOfPierWrite = false;
                }
                else
                {
                    if (propertiesEnabled)
                    {
                        newScope = new List<int>() { 0 };
                        settings.TestProperties = true;
                        settings.TestMethods = false;
                        settings.TestSideOfPierRead = false;
                        settings.TestSideOfPierWrite = false;
                    }
                    else
                    {
                        newScope = new List<int>();
                        settings.TestProperties = false;
                        settings.TestMethods = false;
                        settings.TestSideOfPierRead = false;
                        settings.TestSideOfPierWrite = false;
                    }
                }
            }
        }
        if (performanceEnabled)
        {
            newScope.Add(4);
            settings.TestPerformance = true;
        }
        else
        {
            settings.TestPerformance = false;
        }

        scope = newScope;
        SaveConfiguration();
    }

